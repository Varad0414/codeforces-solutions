import java.util.*;

public class ProblemSolved {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int questions = sc.nextInt();
        int cnt = 0;
        for (int i = 0; i < questions; i++) {
            int f = sc.nextInt();
            int s = sc.nextInt();
            int t = sc.nextInt();

            int temp = 0;
            if (f == 1)
                temp++;
            if (s == 1)
                temp++;
            if (t == 1)
                temp++;

            if (temp >= 2) {
                cnt++;
            }
        }
        
        System.out.println(cnt);
    }
}

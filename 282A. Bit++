import java.util.*;

public class Bitpp{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        int x = 0;
        for (int i = 0; i < num; i++) {
            String str = sc.next();
            if (str.contains("-"))
                x -= 1;
            else if (str.contains("+"))
                x += 1;
        }
        
        System.out.println(x);
    }
}

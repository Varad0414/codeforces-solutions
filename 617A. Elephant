import java.util.*;

public class Elephant {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int dist = sc.nextInt();
        int steps = 0;

        while (dist > 0) {
            if (dist > 5) {
                dist -= 5;
                steps++;
            } else {
                dist = 0;
                steps++;
                break;
            }
        }
        
        System.out.println(steps);
    }
}
